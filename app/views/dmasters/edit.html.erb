<%= form_for [@campaign, @dmaster] do |f| %>
  <div><%= f.label :name, "Name:" %></div>
  <div><%= f.text_field :name %></div>

  <div><%= f.submit "Save Changes" %></div>
<% end %>

<%= form_for [@campaign, @dmaster], method: :delete do |f| %>
  <%= f.submit "Delete DM", class: "delete" %>
<% end %>
